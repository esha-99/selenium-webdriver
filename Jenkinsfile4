pipeline {
    agent any

    stages {
        stage('Test') {
            steps {
                sh '''
                    # Create a virtual environment named "my_env" in the workspace
                    python3 -m venv my_env

                    # Activate the environment
                    . my_env/bin/activate

                    # Install the required libraries inside this environment
                    pip install selenium webdriver-manager

                    # Run your script
                    python TestScriptMay092025.py
                '''
            }
        }
    }
}
